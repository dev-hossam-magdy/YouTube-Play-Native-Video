<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingStart="8dp"
    android:paddingTop="8dp"
    android:paddingEnd="8dp"
    android:layout_marginTop="8dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/logo_image_view"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/jet_brains"
            />
        <TextView
            android:id="@+id/title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="android"
            app:layout_constraintStart_toEndOf="@+id/logo_image_view"
            app:layout_constraintTop_toTopOf="@id/logo_image_view"
            app:layout_constraintBottom_toBottomOf="@id/logo_image_view"
            android:layout_marginStart="8dp"
            />
        <TextView
            android:id="@+id/subscripe_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subscripe"
            android:textSize="18sp"
            android:background="@drawable/circlur"
            android:textColor="@color/colorPrimary"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@id/logo_image_view"
            app:layout_constraintBottom_toBottomOf="@id/logo_image_view"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="8dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>